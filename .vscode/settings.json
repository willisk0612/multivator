{
    "go.lintTool": "golangci-lint",
    "go.formatTool": "gofumpt",
    "explorer.compactFolders": false,
    "scm.compactFolders": false,
    "code-runner.ignoreSelection": true,
    "runTerminalCommand.commands": [
        {
            "command": "go run ${file}",
            "name": "Run Go File"
        },
        {
            "command": "gofumpt -l -w .",
            "name": "Format Go Files"
        },
        {
            "command": "golangci-lint run --disable-all --enable=staticcheck,govet,errcheck,ineffassign,unused,gosec,sqlclosecheck,rowserrcheck,gosimple,prealloc,perfsprint,makezero,gocritic,gofmt,gofumpt,goimports,cyclop,gocyclo,funlen,noctx,containedctx,exportloopref,errorlint,errname,wrapcheck,misspell,stylecheck",
            "name": "Run lint checks"
        }
    ],
}
